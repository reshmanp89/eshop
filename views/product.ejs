<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Watchhut</title>
    <link rel="stylesheet" href="/userProduct.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Kaisei+Tokumin:wght@400;500;700&family=Lobster+Two&family=Oswald:wght@300;500&family=Poppins:ital,wght@0,400;0,500;0,600;0,700;1,300&display=swap"
        rel="stylesheet">
    <script src="https://kit.fontawesome.com/99a477596c.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="header">
        <div class="container">
            <div class="navbar">
                <div class="logo">
                    <img src="/image/Logo.png" alt="" width="100px">
                </div>
                <nav>
                    <ul>
                        <li><a href="">Home</a></li>
                        <li><a href="">Product</a></li>
                        <li><a href="">About</a></li>
                        <li><a href="">Contact</a></li>
                        <li><a href="/user/logout">Logout</a></li>
                        <li><a href=""><i class="fas fa-cart-shopping"></i></a></li>
                    </ul>
                </nav>
                <!-- <span class="menu-icon"><i class="fas fa-bars"></i></span> -->
            </div>
            
        </div>
    </div>
   <!-- product -->

   <div class="small-container">
    <div class="row">
        <% if (typeof products !== 'undefined') { %>
            <% products.forEach(product => { %>
                <div class="col-4">
                   <a href="/user/product/<%= product.id %>"> <img src="<%= product.image %>" alt="<%= product.productName %>" style="width:100%"></a>
                    <h4><%= product.productName %></h4>
                    <div class="rating">
                        <% for (let i = 0; i < product.rating; i++) { %>
                            <i class="fa fa-star"></i>
                        <% } %>
                        <% for (let i = 0; i < 5 - product.rating; i++) { %>
                            <i class="fa fa-star-o"></i>
                        <% } %>
                    </div>
                    <p>₹<%= product.price %></p>
                </div>
            <% }); %>
        <% } else { %>
            <p style="color: red; text-align: center;">Product not found</p>
        <% } %>
    </div>
</div>


    <!-- footer -->
    <footer>
        <div class="foot-container items">
            <ul class="footer-list">
                <li class="caption">Company</li>
                <li>About</li>
                <li>Careers</li>
                <li>Team</li>
                <li>Visit Our Showroom</li>
            </ul>
        </div>
        <div class="foot-container items">
            <ul class="footer-list">
                <li class="caption">Contact us</li>
                <li>Help & Support</li>
                <li>Partner With Us</li>
                <li>Ride With us</li>
                <li class="caption"> Legal</li>
                <li>Terms & Conditions</li>
                <li>Cookie Policy</li>
                <li>Privacy policy</li>
            </ul>
        </div>
        <div class="foot-container items">
            <div>
                <div> <img src="/image/Logo.png" style="width: 150px;height: 150px;" alt=""></div>
                <div>
                    <p>All trademarks are properties of their respective owners. 2008-2023 © WATCHHUT Ltd. All rights
                        reserved</p>
                </div>
            </div>
        </div>
        <div class="foot-container items">
            <ul class="footer-list">
                <li class="caption">Social links</li>
                <li><i class="fab fa-linkedin"></i>
                    <i class="fab fa-facebook"></i>
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-youtube"></i>
                    <i class="fab fa-twitter"></i>
                </li>
            </ul>
        </div>
    </footer>
</body>

</html>
